# .bashrc

# Remove the long delay that happens when an incorrect command is typed.
unset command_not_found_handle

# Bring in color table and prompt.
DIR="/opt/prompts"
COLOR_PROMPT="$DIR/red_prompt"
COLORS="$DIR/colors"
[ -r $COLORS ] && . $COLORS
[ -r $COLOR_PROMPT ] && . $COLOR_PROMPT

# For showing hidden files before directories in 'ls'
export LANG="POSIX"

# Bring in variables from opt sync folder.
[ -r /opt/bash/variables ] && . /opt/bash/variables

# Bring in aliases from opt sync folder.
[ -r /opt/bash/aliases ] && . /opt/bash/aliases

# Bring in functions from opt sync folder.
[ -r /opt/bash/functions ] && . /opt/bash/functions
